{% extends "index" %}
{% block content %}
    <div id="text-section" class="grid-row">
        <div class="grid-layout two-rem standard has-one-column">
            <h1>Welcome to Services</h1>
            {% set posts = craft.entries.section("servicePosts").all %}
            {% for post in posts %}
                <div class="block">
                    <h2>{{ post.title }}</h2>
                    {{ post.richText }}
                    <a class="button" href="{{ post.url }}">Link & Arrow</a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}